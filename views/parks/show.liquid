{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ fullName.park }} 
        </h2>
        <h5 class="card-title">
            Image: {{ park.images }}
        </h5>
        <h3>Images: {{ park.images }}</h3>
        <h6>Body: {{ example.body }}</h6>
        <p class="card-text">
            Activities: {{ park.activities }}
        </p>
        <p class="card-text">
            Entrance Fees: {{ park.entranceFees }}
        </p>
        {% if example.owner == userId %}
        <div class="btn-group">

            <a href="/parks/{{ park.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/examples/{{ example.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}